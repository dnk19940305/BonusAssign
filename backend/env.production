# 生产环境配置
NODE_ENV=production
PORT=3000

# 数据库配置（生产环境 - MySQL）
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=fz
DB_PASSWORD=rootpassword
DB_NAME=bonus_system

# JWT配置（生产环境）
JWT_SECRET=your-super-secret-jwt-key-here-for-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-for-production
JWT_EXPIRES_IN=2h
JWT_REFRESH_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=info

# 文件上传配置
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads/prod

# 安全配置
ENABLE_DB_LOGGING=false
ENABLE_API_LOGGING=false